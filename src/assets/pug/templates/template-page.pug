        meta(name="msapplication-TileImage", content=`${paths.favicon}ms-icon-144x144.png`)
        meta(name="theme-color", content="#ffffff")
        //- Preload
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Handlee&family=Original+Surfer&display=swap", rel="stylesheet")
        link(rel="preload", href=`${paths.style}style.css`, as="style")
        link(rel="stylesheet", href=`${paths.style}style.css`)
        block titleHead
    body
      header.header
        include ../layout/header-page
      main
        block main
            
      block scripts
        script(src=`${paths.js}`)