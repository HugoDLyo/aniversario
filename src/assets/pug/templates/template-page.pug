include ../mixin/logo
include ../mixin/item
include ../mixin/buttom-dark
include ../mixin/download
include ../mixin/galeria
include ../mixin/buttom-goup
doctype
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="author", content="Hugo D Lyo")
        //- Favicon
        link(rel="apple-touch-icon", sizes="57x57", href=`${paths.favicon}apple-icon-57x57.png`)
        link(rel="apple-touch-icon", sizes="60x60", href=`${paths.favicon}apple-icon-60x60.png`)
        link(rel="apple-touch-icon", sizes="72x72", href=`${paths.favicon}apple-icon-72x72.png`)
        link(rel="apple-touch-icon", sizes="76x76", href=`${paths.favicon}apple-icon-76x76.png`)
        link(rel="apple-touch-icon", sizes="114x114", href=`${paths.favicon}apple-icon-114x114.png`)
        link(rel="apple-touch-icon", sizes="120x120", href=`${paths.favicon}apple-icon-120x120.png`)
        link(rel="apple-touch-icon", sizes="144x144", href=`${paths.favicon}apple-icon-144x144.png`)
        link(rel="apple-touch-icon", sizes="152x152", href=`${paths.favicon}apple-icon-152x152.png`)
        link(rel="apple-touch-icon", sizes="180x180", href=`${paths.favicon}apple-icon-180x180.png`)
